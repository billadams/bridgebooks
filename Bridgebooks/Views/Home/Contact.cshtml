@model Bridgebooks.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

@section AdditionalMeta
{
    <meta name="description" content="@Model.SEOViewModel.Description" />
    <link rel="canonical" href="@Model.SEOViewModel.Canonical" />
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
}

<section>

    <h1>Questions? Send Us A Message</h1>

    @using (@Html.BeginForm("Contact", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { placeholder = "Enter Your Name" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Your Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { placeholder = "Optional" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Comments)
            @Html.TextAreaFor(m => m.Comments, new { placeholder = "Enter Your Comment" })
            @Html.ValidationMessageFor(m => m.Comments)
        </div>

        <div class="form-group">
            <input type="submit" value="Send" />
        </div>

        @*@Html.HiddenFor(m => m.SEOViewModel.Description)
        @Html.HiddenFor(m => m.SEOViewModel.Canonical)*@
    }

</section>