<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bridgebooks LLC</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">

    
    <nav>
        <div class="company-logo">
            <a href="#">Bridge Books</a>
        </div>
        <div class="menu">
            <ul>
                <li><a href=#>Home</a></li>
                <li><a href=#>Services</a></li>
                <li><a href=#>Our Team</a></li>
                <li><a href=#>Contact</a></li>
                <li><a href=#>Testimonials</a></li>
            </ul>
        </div>

        <button class="hamburger" type="button" role="presentation">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
            <span class="menu-label" id="menu-label">Menu</span>
        </button>

    </nav>

    @*<div class="container">*@
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BridgeBooks</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script>
        $('.hamburger').click(function () {
            $(this).toggleClass('is-active');
  
            $('nav ul').toggleClass('show-mobile-nav');
        });
    </script>
</body>
</html>
