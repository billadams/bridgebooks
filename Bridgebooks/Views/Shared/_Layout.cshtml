<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bridgebooks LLC</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">


        <nav>
            <div class="company-logo">
                <a href="#">Bridge Books</a>
            </div>
            @Html.Partial("~/Views/Shared/_Menu.cshtml")

            <button class="hamburger" type="button" role="presentation">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
                <span class="menu-label" id="menu-label">Menu</span>
            </button>

        </nav>

        @RenderBody()

        <hr />
        <footer>
            <div class="links">
                <div>
                    <h4>Where To?</h4>
                    @Html.Partial("~/Views/Shared/_Menu.cshtml")
                </div>

                <div class="social">
                    <h4>Follow Us</h4>
                    <a href="https://www.facebook.com/bridgebooksllc/" target="_blank">
                        <i class="fab fa-facebook"></i>
                    </a>
                </div>
            </div>
            <div class="copyright">
                <p>&copy; @DateTime.Now.Year Bridge Books LLC | Created by Bill Adams</p>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script>
        $('.hamburger').click(function () {
            $(this).toggleClass('is-active');

            $('nav ul').toggleClass('show-mobile-nav');
        });
    </script>
</body>
</html>
